<UserControl x:Class="QuizMaker.Views.AnswersEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuizMaker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock 
            Grid.Row="0"
            Grid.Column="0"
            Text="Odpowiedzi"
            FontSize="15"/>

        <TextBlock 
            Grid.Row="0"
            Grid.Column="1"
            Text="Kolejność"
            FontSize="15"/>

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Text="0"
            Width="100"/>

        <TextBox
            Grid.Row="1"
            Grid.Column="0"
            Width="200">Ile filmów wyszło w 2000 roku?</TextBox>


        <TextBlock 
            Grid.Row="2"
            Grid.Column="0"
            Text="Odpowiedź 1"
            FontSize="15"/>
        <TextBox
            Grid.Row="3"
            Grid.Column="0"
            Width="200">12500</TextBox>
        <CheckBox
            Grid.Row="3"
            Grid.Column="1"/>
        <TextBlock
            Grid.Row="3"
            Grid.Column="2"
            Text="Poprawna odpowiedź"/>

        <TextBlock 
            Grid.Row="4"
            Grid.Column="0"
            Text="Odpowiedź 2"
            FontSize="15"/>
        <TextBox
            Grid.Row="5"
            Grid.Column="0"
            Width="200">12</TextBox>
        <CheckBox
            Grid.Row="5"
            Grid.Column="1"/>
        <TextBlock
            Grid.Row="5"
            Grid.Column="2"
            Text="Poprawna odpowiedź"/>

        <TextBlock 
            Grid.Row="6"
            Grid.Column="0"
            Text="Odpowiedź 3"
            FontSize="15"/>
        <TextBox
            Grid.Row="7"
            Grid.Column="0"
            Width="200">2137</TextBox>
        <CheckBox
            Grid.Row="7"
            Grid.Column="1"/>
        <TextBlock
            Grid.Row="7"
            Grid.Column="2"
            Text="Poprawna odpowiedź"/>


        <TextBlock 
            Grid.Row="8"
            Grid.Column="0"
            Text="Odpowiedź 4"
            FontSize="15"/>
        <TextBox
            Grid.Row="9"
            Grid.Column="0"
            Width="200">42069</TextBox>
        <CheckBox
            Grid.Row="9"
            Grid.Column="1"/>
        <TextBlock
            Grid.Row="9"
            Grid.Column="2"
            Text="Poprawna odpowiedź"/>


        <StackPanel 
            Orientation="Horizontal"
            Grid.Row="12"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            Margin="20 20 20 20">
            <Button Margin="0 0 20 0">Wróć do pytań</Button>
            <Button>Zapisz odpowiedzi</Button>
        </StackPanel>
    
    </Grid>
</UserControl>
